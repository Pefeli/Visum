<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"            
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Visum.Views.LoadingIndicatorPage"
    BackgroundColor="#80000000">
    <ContentPage.Content>
        <StackLayout
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="Center"
            Orientation="Horizontal"
            VerticalOptions="Center">
            <ActivityIndicator
                IsRunning="True"
                Margin="0, 0, 20, 0">
            </ActivityIndicator>
            <Label
                FontAttributes="Bold"
                VerticalOptions="Center"
                Text="Procesando...">
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>